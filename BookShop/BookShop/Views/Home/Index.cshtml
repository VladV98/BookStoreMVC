@model HomeViewModel

<partial name="_Carousel" />

<div class="container">
    <h1><strong>Welcome to our Book Store!</strong></h1>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">About Us</button>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">About Us</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Bookstores are special places, full of the smell of new books,
                        browsing the shelves for your next great read, booksellers you know you can count on for great, personal recommendations,
                        a community you know will be open and welcoming.
                        <br />
                        We know that booksellers help readers discover and share the magic of books.
                        They are dedicated to helping you find the book you need--the book that could change your life.
                        When they recommend a book to you, they are genuinely looking to make a connection and create an experience for you.
                        <br />
                        <aside>We want to give you a way to celebrate your favorite bookstore with with other book lovers: just use the #MVCbookstore hashtag and post a photo, quote, or story about your favorite bookstore.</aside>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>

    <h2>Books of the week</h2>
    <h4>Our weekly selection - just for you!</h4>
    <div class="row">
        @foreach (var Book in Model.BooksOfTheWeek)
        {
            <partial name="_BookCard" model="Book" />
        }
    </div>
