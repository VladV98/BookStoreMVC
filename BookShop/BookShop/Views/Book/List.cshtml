@using System.Globalization
@model BooksListViewModel


<h1>@Model.CurrentCategory</h1>
@foreach (var book in Model.Books)
{
    
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@book.ImageThumbnailUrl" alt="">
                <div class="caption">
                    <h3 class="pull-right">@book.Price.ToString("\u20AC0.00")</h3>
                    <h3>
                        <a asp.controller="Book" asp-action="Details" asp-route-id="@book.BookId">@book.Name</a>
                    </h3>
                    <p>@book.ShortDescription</p>
                    <div class="author">
                        <label for="author">Author: @book.Author</label>
                    </div>
                    
                </div> 
            </div>
        </div>
    
}
